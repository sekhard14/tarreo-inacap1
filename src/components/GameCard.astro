---
interface Props {
  title: string;
  image: string;
  icon: string;
  platform: string;
  description: string;
}

const { title, image, icon, platform, description } = Astro.props;
---

<div class="relative group" data-aos="fade-up">
  <div class="absolute inset-0 bg-gradient-to-r from-inacap-red to-dark rounded-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
  <div class="bg-dark/50 rounded-xl p-6 border border-inacap-red/20 relative h-full flex flex-col">
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <h3 class="text-xl font-bold mb-1">{title}</h3>
        <p class="text-sm text-gray-400 flex items-center">
          <i class="fas fa-desktop mr-2"></i>
          {platform}
        </p>
      </div>
      <i class={`${icon} text-2xl text-inacap-red group-hover:scale-110 transition-transform`}></i>
    </div>
    
    <div class="relative flex-1">
      <img 
        src={image} 
        alt={title} 
        class="w-16 h-16 object-contain mb-4 group-hover:scale-110 transition-transform"
      >
      <p class="text-gray-300 text-sm">{description}</p>
    </div>
    
    <button class="mt-4 w-full bg-gradient-to-r from-inacap-red to-red-700 py-2 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity transform translate-y-2 group-hover:translate-y-0">
      Ver Detalles
    </button>
  </div>
</div>