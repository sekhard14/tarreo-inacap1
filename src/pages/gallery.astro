---
import Layout from '../layouts/Layout.astro';

const images = [
  { src: '/images/gallery/1.jpg', title: 'Torneo 2023' },
  { src: '/images/gallery/2.jpg', title: 'Finales LOL' },
  { src: '/images/gallery/3.jpg', title: 'Ganadores Valorant' },
  // Add more images
];
---

<Layout title="Galería - Tarreo INACAP 2024">
  <main class="pt-20">
    <section class="py-20 bg-gradient-to-b from-dark to-inacap-red/10">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-permanent-marker text-center mb-12">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-inacap-red">
            Galería
          </span>
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {images.map(image => (
            <div class="relative group overflow-hidden rounded-xl" data-aos="fade-up">
              <img 
                src={image.src} 
                alt={image.title}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              >
              <div class="absolute inset-0 bg-gradient-to-t from-dark to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
                <div class="absolute bottom-0 p-6">
                  <h3 class="text-xl font-bold">{image.title}</h3>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>